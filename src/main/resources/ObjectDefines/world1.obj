$RAVEN_GIF = raven.gif
$ORC_GIF = orc.gif

$PLAYER_MOVING = vikingleft-crop.gif
$PLAYER_IDLE = viking_idle_left-crop.gif


### RAVEN ###

$RavenAnimation = Define Animation:
    State: MOVING $RAVEN_GIF
    state: IDLE $RAVEN_GIF
    initial: MOVING

$RavenStats = Define Stats:
    HP: 100.0
    Speed: 70.0
    Damage: 10.0
    resistance: 0.0
    scale: 5.0

$RavenShape = Define Shape:
    Type: Circle
    Radius: 4.0

$RavenStructure = Define Structure:
    Filter: ENEMY PLAYER WEAPON
    Category: ENEMY
    Shape: $RavenShape
    BodyType: DynamicBody
    density: 1.0
    friction: 0
    isSensor: false

$RAVEN = Define Actor:
    Animation: $RavenAnimation
    Stats: $RavenStats
    Structure: $RavenStructure


### ORC ###

$OrcAnimation = Define Animation:
    State: MOVING $ORC_GIF

$OrcStats = Define Stats:
    HP: 150.0
    Speed: 50.0
    Damage: 20.0
    resistance: 0.0
    scale: 7.0

$OrcShape = Define Shape:
    Type: Circle
    Radius: 4.0

$OrcStructure = Define Structure:
    Filter: ENEMY PLAYER WEAPON
    Category: ENEMY
    Shape: $OrcShape
    BodyType: DynamicBody
    density: 2.0
    friction: 0
    isSensor: false

$ORC = Define Actor:
    Animation: $OrcAnimation
    Stats: $OrcStats
    Structure: $OrcStructure


### PLAYER ###

$PlayerAnimation = Define Animation:
    State: MOVING $PLAYER_MOVING
    state: IDLE $PLAYER_IDLE
    initial: IDLE

$PlayerStats = Define Stats:
    HP: 100.0
    Speed: 100.0
    Damage: 10.0
    resistance: 0.0
    scale: 1.8

$PlayerShape = Define Shape:
    Type: Circle
    Radius: 4.0

$PlayerStructure = Define Structure:
    Filter: ENEMY WALL
    Category: PLAYER
    Shape: $PlayerShape
    BodyType: DynamicBody
    density: 2.0
    friction: 0
    isSensor: false

$PLAYER = Define Actor:
    Animation: $PlayerAnimation
    Stats: $PlayerStats
    Structure: $PlayerStructure